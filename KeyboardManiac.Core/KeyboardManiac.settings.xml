    <Plugin typeId="5" name="Shortcut search">
      <Setting key="SpecialFolder" value="StartMenu;CommonStartMenu" />
      <Setting key="IncludeFileMask" value="*.lnk;*.exe" />
      <Setting key="ScoreAdjustment" value="200" />
      <Setting key="MaxFolderDepth" value="-1" />
    </Plugin>
    
